// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      // Runtime: sempre pooler (Vercel usa solo questo)
  directUrl = env("DIRECT_URL")        // Solo migrazioni (da locale). Su Vercel: = DATABASE_URL se SKIP_MIGRATIONS=true
}

generator client {
  provider = "prisma-client-js"
}

model NewsletterSubscription {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expiresAt  DateTime
  confirmed  Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model ContactMessage {
  id         String   @id @default(cuid())
  nome       String
  cognome    String
  telefono   String?
  email      String
  messaggio  String
  createdAt  DateTime @default(now())
}

model Affiliation {
  id                     String    @id @default(cuid())
  nome                   String
  cognome                String
  email                  String
  telefono               String
  privacy                Boolean
  orderId                String?   @unique
  status                 String    @default("pending")
  payerEmail             String?
  confirmationEmailSentAt DateTime?
  memberSince            DateTime?
  memberUntil            DateTime?
  memberNumber           String?   @unique
  membershipCardSentAt   DateTime?
  lastPaypalStatus       String?   // Debug: ultimo status PayPal (es. PENDING, COMPLETED)
  lastPaypalCheckedAt    DateTime? // Debug: ultima verifica capture
  createdAt              DateTime  @default(now())
}
