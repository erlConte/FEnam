# Database (Session Pooler per runtime serverless)
DATABASE_URL=postgresql://user:password@host:6543/database?pgbouncer=true&connection_limit=1

# Direct connection per migrazioni (solo locale, non usato su Vercel)
DIRECT_URL=postgresql://user:password@host:5432/database

# Migrazioni (Strategia B: skip su Vercel)
SKIP_MIGRATIONS=true

# PayPal (LIVE per produzione, Sandbox per dev)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
PAYPAL_ENV=production  # production o sandbox (default: production se NODE_ENV=production)

# Base URL
NEXT_PUBLIC_BASE_URL=https://fenam.website
BASE_URL=https://fenam.website  # Usato per link nelle email (fallback: NEXT_PUBLIC_BASE_URL)

# Admin
ADMIN_TOKEN=

# Handoff FeNAM -> Enotempo (opzionale)
FENAM_HANDOFF_SECRET=
ENOTEMPO_HANDOFF_URL=  # URL per redirect automatico dopo affiliazione (opzionale)

# Email (Resend)
RESEND_API_KEY=
RESEND_AUDIENCE_ID=  # OBBLIGATORIO per newsletter
SENDER_EMAIL=noreply@fenam.website
CONTACT_EMAIL=info@fenam.website  # Email che riceve messaggi form contatti
AFFILIAZIONE_EMAIL_SUBJECT=Conferma affiliazione FENAM  # Opzionale

# CORS (default: fenam.website + www)
ALLOWED_ORIGINS=https://fenam.website,https://www.fenam.website

# Affiliazione gratuita (donazione=0): in produzione disabilitata di default
# Impostare ALLOW_FREE_AFFILIATION=true su Vercel Preview per test
ALLOW_FREE_AFFILIATION=false

# Logging (opzionale: debug, info, warn, error)
LOG_LEVEL=warn
